enum Role {
  USER
  ADMIN
}

enum PlanType {
  BASIC
  STANDARD
  PREMIUM
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

//////////////////////
// MODELS
//////////////////////

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  role         Role          @default(USER)
  createdAt    DateTime      @default(now())

  profiles     Profile[]
  subscription Subscription?
  payments     Payment[]
}

model Profile {
  id        String   @id @default(uuid())
  name      String
  avatarUrl String?
  isKids    Boolean  @default(false)

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  watchHistory       WatchHistory[]
  ratings            Rating[]
  recommendationLogs RecommendationLog[]
}

model Video {
  id            String   @id @default(uuid())
  title         String
  description   String
  duration      Int
  releaseYear   Int
  videoUrl      String
  thumbnailUrl String
  createdAt     DateTime @default(now())

  genres               VideoGenre[]
  watchHistory         WatchHistory[]
  ratings              Rating[]
  recommendationLogs   RecommendationLog[]
}

model Genre {
  id    String @id @default(uuid())
  name  String @unique

  videos VideoGenre[]
}

model VideoGenre {
  videoId String
  genreId String

  video Video @relation(fields: [videoId], references: [id])
  genre Genre @relation(fields: [genreId], references: [id])

  @@id([videoId, genreId])
}

model WatchHistory {
  id          String   @id @default(uuid())
  progress    Int
  lastWatched DateTime @default(now())

  profileId   String
  videoId     String

  profile Profile @relation(fields: [profileId], references: [id])
  video   Video   @relation(fields: [videoId], references: [id])

  @@unique([profileId, videoId])
}

model Subscription {
  id        String   @id @default(uuid())
  plan      PlanType
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(true)

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
}

model Payment {
  id             String        @id @default(uuid())
  amount         Float
  status         PaymentStatus
  paymentGateway String
  transactionId  String
  createdAt      DateTime      @default(now())

  userId         String
  user           User          @relation(fields: [userId], references: [id])
}

model Rating {
  id        String   @id @default(uuid())
  stars     Int
  comment   String?
  createdAt DateTime @default(now())

  profileId String
  videoId   String

  profile Profile @relation(fields: [profileId], references: [id])
  video   Video   @relation(fields: [videoId], references: [id])

  @@unique([profileId, videoId])
}

model RecommendationLog {
  id        String   @id @default(uuid())
  reason    String
  clicked   Boolean @default(false)
  createdAt DateTime @default(now())

  profileId String
  videoId   String

  profile Profile @relation(fields: [profileId], references: [id])
  video   Video   @relation(fields: [videoId], references: [id])
}